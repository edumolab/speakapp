---
import Layout from "../../layouts/Layout.astro";
---

<Layout title="Add Info">
    <div class="container  bg-gray-900  dark:bg-dark mx-auto  px-4 flex justify-center items-center" style="min-height: 100vh;">
    <form id="login-form" class="space-y-4 md:space-y-6 py-5 px-3 mt-10 rounded-lg bg-gray-600" method="post" action="/api/users">
        <div>
            <label for="text" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Your Name:</label>
            <input type="text" name="name" id="name" class="bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" placeholder="Javlon" required="">
        </div>
        <div>
            <label for="password" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Password</label>
            <input type="number" name="age" id="age" placeholder="25" class="bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" required="">
        </div>
        <button type="submit" class="w-full text-white bg-green-400 hover:bg-primary-700 focus:ring-4 focus:outline-none focus:ring-primary-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-primary-600 dark:hover:bg-primary-700 dark:focus:ring-primary-800">Add Info</button>
        
    </form>
    </div>
</Layout>


<style>
    form{
        width:100%;
        height:auto;
        padding:50px 20px;
    }
</style>