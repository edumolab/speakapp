---
export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en" class="dark">
	<head>
	<meta http-equiv="Content-Type" content="text/html;charset=UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta property="og:title" content="Exam Online-Edumo" />
<meta property="og:type" content="website" />
<meta property="og:url" content="https://speakingapp.uz/" />
<meta property="og:image" content="https://cdn.pixabay.com/photo/2018/05/15/20/47/microphone-3404243_960_720.png" />
	<meta name="description" content="Edumo Online Speaking Exam">
	<meta name="author" content="Kubayev Javlon">
	<meta name="keywords" content="Exam Online, Multi Level, Speaking, IELTS, ingliz tili, Multi Level Speaking, Speaking exam">
	<link rel="shortcut icon" href="/public/favicon.ico" type="image/x-icon">
		<meta name="generator" content={Astro.generator} />
		<script>
    // On page load or when changing themes, best to add inline in `head` to avoid FOUC
    if (localStorage.getItem('color-theme') === 'dark' || (!('color-theme' in localStorage) && window.matchMedia('(prefers-color-scheme: dark)').matches)) {
        document.documentElement.classList.add('dark');
    } else {
        document.documentElement.classList.remove('dark')
    }
</script>
		<title>{title}</title>
	
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
	:root {
		--accent: 124, 58, 237;
		--accent-gradient: linear-gradient(45deg, rgb(var(--accent)), #da62c4 30%, white 60%);
	}
	::-webkit-scrollbar{
  display: none;
}
</style>
